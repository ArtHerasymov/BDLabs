        xmlns:local="clr-namespace:PostgreWpf.Views"
        mc:Ignorable="d"
        Title="ActorInput" Height="180.627" Width="244.546"
        WindowStartupLocation="CenterScreen"
        Background="#030A0F">
    <Grid Margin="0,0,-6.2,-0.4">
