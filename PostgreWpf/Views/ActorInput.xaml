        <TextBox Name="SecondNameField" HorizontalAlignment="Left" Height="23" Margin="90,47,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="ExperienceField" HorizontalAlignment="Left" Height="23" Margin="90,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Foreground="white" Content="First name" HorizontalAlignment="Left" Margin="5,19,0,0" VerticalAlignment="Top"/>
        <Label Foreground="White" Content="Second name" HorizontalAlignment="Left" Margin="6,45,0,0" VerticalAlignment="Top"/>
        <Label Foreground="White" Content="Experience" HorizontalAlignment="Left" Margin="5,71,0,0" VerticalAlignment="Top"/>
        <Button Background="#071E2E" Foreground="white" Click="CreateActor_Clicked" Content="Create" HorizontalAlignment="Left" Margin="119,103,0,0" VerticalAlignment="Top" Width="90" Height="31"/>

    </Grid>
</Window>
